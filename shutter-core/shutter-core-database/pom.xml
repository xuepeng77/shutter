        <dependency>
            <groupId>cn.org.shutter</groupId>
            <artifactId>shutter-core-common</artifactId>
            <version>${project.version}</version>
        </dependency>
        <!-- MySql -->
        <dependency>
            <groupId>mysql</groupId>
            <artifactId>mysql-connector-java</artifactId>
            <scope>runtime</scope>
        </dependency>
    </dependencies>

</project>